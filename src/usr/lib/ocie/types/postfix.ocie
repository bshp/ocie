#!/bin/bash
    
function app_shutdown()
{
    /usr/sbin/postfix stop;
}
    
function app_reload()
{
    app_shutdown;
    app_start;
}
    
function app_start()
{
    /usr/sbin/postfix -c /etc/postfix;
    sleep 5;
    echo "$(cat ${POSTFIX_PID} | sed 's/ //'))";
}
    
function app_test()
{
    echo $(/usr/sbin/postfix check)
}
